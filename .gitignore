# Ignore the personal Obsidian settings folder:
.obsidian/*
# Keep these folders:
!.obsidian/plugins
!.obsidian/snippets

# But ignore everything in them:
.obsidian/plugins/*
.obsidian/snippets/*

# Except this one plugin and one css snippet:
!.obsidian/plugins/ebenezer-plugin
!.obsidian/snippets/ebenezer-lexicon-wikilink-hiding.css
!.obsidian/snippets/ebenezer-embedded-link-icon-hiding.css

# But ignore the files I use for unit testing:
.obsidian/plugins/ebenezer-plugin/data.json
.obsidian/plugins/ebenezer-plugin/node_modules/
.obsidian/plugins/ebenezer-plugin/eslint.config.mjs

# CSS should be enabled by default
!.obsidian/appearance.json

